package com.sunbeam;

public class Employee {
	private:
	    int id;
	    float sal;

	public:
	    employee()
	    {
	        this->id = 0;
	        this->sal = 0.0;
	    }

	    employee(int id, float sal)
	    {
	        this->id = id;
	        this->sal = sal;
	    }

	    int get_id()
	    {
	        return this->id;
	    }

	    void set_id(int id)
	    {
	        this->id = id;
	    }

	    float get_sal()
	    {
	        return this->sal;
	    }

	    void set_sal(float sal)
	    {
	        this->sal = sal;
	    }

	    void acceptEmployee()
	    {
	        cout << "Enter the Employee ID = ";
	        cin >> this->id;
	        cout << "Enter the Employee Salary = ";
	        cin >> this->sal;
	    }

	    void displayEmployee()
	    {
	        cout << "---------------------" << endl;
	        cout << "Employee ID : " << this->id << endl;
	        cout << "Employee Salary : " << this->sal << endl;
	    }
	}

}
